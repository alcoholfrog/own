@model Homework2015_01_25.Models.Board

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>Not_recom</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h1>비추천</h1></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>이름 : </label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>제목 : </label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>본문 : </label>
                    @Html.TextBoxFor(x => x.Text, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>비추천 이유</label>
                    @Html.DropDownListFor(x => x.Reason,
                                    new[] {new SelectListItem() {Text = "가격", Value = "가격"},
                                            new SelectListItem() {Text = "맛", Value = "맛"},
                                            new SelectListItem() {Text = "서비스", Value = "서비스"},
                                            new SelectListItem() {Text = "위생", Value = "위생"}},
                                     "이유 선택", new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="비추천글 등록" />
                </div>
            }
        </div>
    </div>
</body>
</html>
